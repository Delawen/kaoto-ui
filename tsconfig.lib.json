{
  "compilerOptions": {
    "lib": ["es6", "dom", "es2018.promise", "es2019", "esnext"],
    "outDir": "dist/lib",
    "target": "es5",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "removeComments": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "paths": {
      "@kaoto/types": ["./src/types"],
      "@kaoto/store": ["./src/store"]
    }
  },
  "include": ["src"],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.stories.tsx",
    "**/*.test.ts*",
  ]
}
