{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "isolatedModules": false, // keep as false, we need to evaluate files separately: https://kulshekhar.github.io/ts-jest/user/config/isolatedModules
    "jsx": "react-jsx",
    "lib": [
      "esnext",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "strict": true,
    "strictNullChecks": false,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es2019",
    "skipLibCheck": true
  },
  "include": [
    "**/src/**/*.tsx",
    "**/src/**/*.ts",
    "**/src/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".yarn"
  ]
}
