{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "react-jsx",
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist/app",
    "sourceMap": true,
    "strict": true,
    "target": "es6",
  },
  "exclude": [
    "dist",
    "node_modules",
    "**/*.stories.tsx",
    "**/*.test.ts*",
  ]
}
